{
  "name": "units-converter",
  "version": "1.0.3",
  "description": "A simple utility library to measure and convert between units",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "browser": "dist/umd/index.js",
  "keywords": [
    "units",
    "conversion",
    "convert-units",
    "es6-modules",
    "commonjs",
    "javascript",
    "measurement-units",
    "unit-of-measure"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BOISOLO/units-converter"
  },
  "scripts": {
    "build:cjs": "npx webpack --config-name=\"cjs\"",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "npx webpack --config-name=\"umd\"",
    "build": "npm run-script build:cjs && npm run-script build:umd && npm run-script build:esm",
    "prepare": "npm run-script build",
    "dev": "tsc -p tsconfig.json",
    "test": "jest --coverage",
    "lint": "eslint '**/*.ts' --fix",
    "pretest": "agadoo"
  },
  "author": {
    "name": "Georgios Papageorgiou",
    "email": "giorgospapa86@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "agadoo": "^2.0.0",
    "eslint": "^7.27.0",
    "jest": "^26.6.3",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0"
  }
}
