{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/cjs",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/index.ts",
  ]
}